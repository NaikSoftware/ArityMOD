<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.naiksoftware.aritymod">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ArityApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="ArityMOD"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".feature.graph.FullScreenGraphActivity" />
        <activity
            android:name=".feature.help.HelpFragment"
            android:label="Arity Calculator" />
        <activity
            android:name=".feature.settings.SettingsFragment"
            android:label="Calculator settings" />
    </application>

</manifest>
